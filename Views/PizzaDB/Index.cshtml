@model IEnumerable<FortyFiftySixDeegrees.Models.Pizza>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-image: none !important;
        background-color:white !important;
    }
</style>

<h2>Index</h2>

<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionEN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionFI)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.URL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescriptionEN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescriptionFI)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PizzaId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PizzaId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PizzaId })
                </td>
            </tr>
        }

    </table>
</div>
